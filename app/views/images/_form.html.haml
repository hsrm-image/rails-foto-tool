= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field 
    = f.label :image_file
    = f.drag_and_drop_file_field :image_file do 
      Drop the file here!
      %b pls

  .actions
    = f.submit 'Save'
