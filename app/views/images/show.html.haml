= javascript_pack_tag 'rating', 'data-turbolinks-track': 'reload'
%p#notice= notice

%p
  %b Title:
  = @image.title
%p
  %b Description:
  = @image.description
%p
  %b Image File:
  = image_tag @image.image_file
%p
  %b Owner:
  = link_to @image.owner.name, @image.owner
%p 
  Current uuid: 
  - if session[:session_id].nil?
    Please activate cookies to rate!
  - else 
    = session[:session_id]
  %p
    %ul#rating
      - user_rate = (@image.get_rate("eeev2")&.rating) || 0
      - (1..5).each do |i|
        - puts(user_rate)
        %li{class: "rating-star" + (user_rate >= i ? " star-active" : " star-inactive"), id: "star_#{i}", "data-rateable-type": "Image", "data-rateable-id": "#{@image.id}", "data-stars": "#{i}"}
          Star!

%p 
  This image has a score of
  = @image.get_score
  %br 
  from 
  = @image.get_ratings.count
  Ratings
= link_to 'Edit', edit_image_path(@image)
\|
= link_to 'Back', images_path
