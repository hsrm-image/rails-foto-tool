- col = collection
- header = col.images.first.image_file.variant(resize_to_fill: [Rails.configuration.x.image.preview_image_size, Rails.configuration.x.image.preview_image_size]) if col.images.first
- header = col.header_image.image_file.variant(resize_to_fill: [Rails.configuration.x.image.preview_image_size, Rails.configuration.x.image.preview_image_size]) if col.header_image
%li.grid-element
	= link_to col do
		.collectionName
			.collectionBlocker
				%h3= col.name
			= image_tag url_for(header)
